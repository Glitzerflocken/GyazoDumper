<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0-windows</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyName>GyazoDumper</AssemblyName>
    <RootNamespace>GyazoDumper</RootNamespace>

    <!-- Fuer Single-File Deployment -->
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>

    <!-- Groessen-Optimierung -->
    <PublishTrimmed>true</PublishTrimmed>
    <TrimMode>partial</TrimMode>
    <EnableCompressionInSingleFile>true</EnableCompressionInSingleFile>

    <!-- COM Interop fuer FolderPicker (IFileOpenDialog) bei Trimming beibehalten -->
    <BuiltInComInteropSupport>true</BuiltInComInteropSupport>

    <!-- Application Icon -->
    <ApplicationIcon>GyazoDumper.ico</ApplicationIcon>
  </PropertyGroup>

  <!-- Browser-Extension Dateien als Embedded Resources einbetten -->
  <ItemGroup>
    <EmbeddedResource Include="..\BrowserExtension\manifest.json" LogicalName="BrowserExtension.manifest.json" />
    <EmbeddedResource Include="..\BrowserExtension\Content.js" LogicalName="BrowserExtension.Content.js" />
    <EmbeddedResource Include="..\BrowserExtension\background.js" LogicalName="BrowserExtension.background.js" />
    <EmbeddedResource Include="..\BrowserExtension\SettingsPopup.html" LogicalName="BrowserExtension.SettingsPopup.html" />
    <EmbeddedResource Include="..\BrowserExtension\popup.js" LogicalName="BrowserExtension.popup.js" />
    <EmbeddedResource Include="..\BrowserExtension\popup.css" LogicalName="BrowserExtension.popup.css" />
    <EmbeddedResource Include="..\BrowserExtension\translations.js" LogicalName="BrowserExtension.translations.js" />
    <EmbeddedResource Include="..\BrowserExtension\GyazoDumper.png" LogicalName="BrowserExtension.GyazoDumper.png" />
  </ItemGroup>

</Project>
